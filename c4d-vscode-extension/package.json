{
  "name": "c4dcollection",
  "displayName": "C4DCollection",
  "description": "PlantUML C4 Collection for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:c4dcollection.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "c4dcollection.helloWorld",
        "title": "C4D-Collection"
      }
    ],
    "configuration": {
      "title": "C4DCollection",
      "properties": {
        "c4dcollection.collectionAPIURL": {
          "type": "string",
          "default": "http://localhost:3334/api/v1",
          "description": "Search API endpoint"
        },
        "c4dcollection.seachLengthTreshold": {
          "type": "number",
          "default": 2,
          "description": "Search fileld treshold length. Until search contain less chars - nothing happened."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^17.0.6",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^0.8.3",
    "cross-fetch": "^3.1.4"
  }
}
