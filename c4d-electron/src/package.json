{
  "name": "c4d",
  "version": "1.1.0",
  "description": "c4 editor",
  "main": "lib/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "make": "electron-forge make",
    "lint": "eslint src"
  },
  "author": "rzrbld",
  "repository": {
    "type": "git",
    "url": "https://github.com/rzrbld/c4d.git"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "electronPackagerConfig": {
        "icon": "./icons/c4d"
      },
      "packagerConfig": {
        "extraResource": [
          "./icons/"
        ],
        "icon": "./icons/c4d"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "c4d",
            "options": {
              "icon": "icons/Icon-512.png",
              "categories": [
                "Utility"
              ]
            }
          },
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-snap",
          "config": {
            "appSlots": [
              "home",
              "removable-media",
              "raw-usb"
            ],
            "confinement": "classic",
            "description": "Simple c4 editor.",
            "features": {
              "audio": "true",
              "webgl": "true"
            },
            "summary": "Simple c4 editor."
          },
          "platforms": [
            "none"
          ]
        },
        {
          "name": "@electron-forge/maker-flatpak",
          "config": {
            "name": "c4d",
            "options": {
              "id": "ru.rzrbld.c4d",
              "productName": "c4d",
              "description": "Simple c4 editor.",
              "icon": {
                "48x48": "icons/Icon-48.png",
                "64x64": "icons/Icon-64.png",
                "128x128": "icons/Icon-128.png",
                "256x256": "icons/Icon-256.png"
              },
              "categories": [
                "Utility"
              ]
            }
          },
          "platforms": [
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-zip",
          "config": {
            "name": "c4d"
          },
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          },
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "c4d"
          },
          "platforms": [
            "none"
          ]
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "c4d",
            "authors": "rzrbld",
            "description": "Simple c4 editor."
          },
          "platforms": [
            "win32"
          ]
        }
      ],
      "publishers": [
        {
          "config": {
            "repository": {
              "name": "c4d",
              "owner": "rzrbld"
            }
          },
          "name": "@electron-forge/publisher-github",
          "platforms": [
            "linux",
            "win32",
            "darwin"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-dmg": "^6.0.0-beta.54",
    "@electron-forge/maker-flatpak": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/publisher-github": "^6.0.0-beta.54",
    "electron": "^11.4.12",
    "electron-installer-snap": "^5.1.0"
  },
  "dependencies": {
    "@electron-forge/maker-snap": "^6.0.0-beta.61",
    "@fortawesome/fontawesome-free": "^5.15.1",
    "animate.css": "^4.1.1",
    "autocompleter": "^6.1.0",
    "bootstrap": "^5.1.0",
    "directory-tree": "^3.0.0",
    "electron-forge": "^0.0.9",
    "electron-settings": "^4.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-tree-view": "github:rzrbld/electron-tree-view",
    "electron-window-state": "^5.0.3",
    "he": "^1.2.0",
    "highlight.js": "^11.2.0",
    "js-base64": "^3.6.0",
    "js-yaml": "^4.0.0",
    "jshashes": "^1.0.8",
    "lodash": "^4.17.20",
    "marked": "^3.0.7",
    "monaco-editor": "^0.21.2",
    "plantuml-encoder": "^1.4.0",
    "pretty-data": "^0.40.0",
    "request": "^2.88.2",
    "split.js": "^1.6.4"
  }
}
